      async function refreshPositions()126
        try127
          const [ordersRes, accRes] = await Promise.all([fetch('/api/orders'), fetch('/api/account')]);
          const orders = await ordersRes.json();
          const acc = await accRes.json();
          // show account balance/equity
          accInfoEl.textContent = `Balance: $128(+acc.balance).toFixed(2)}  Equity: $129(+acc.equity).toFixed(2)}`;
          // show open positions
          const open = orders.filter(o => o.status === 'open');
          if(open.length === 0)130
            positionsListEl.innerHTML = '<div class="placeholder">No open positions</div>';
          } else 131
            positionsListEl.innerHTML = '';
            open.forEach(o=>132
              const div = document.createElement('div');
              div.style.display = 'flex';
              div.style.justifyContent = 'space-between';
              div.style.padding = '8px';
              div.style.borderBottom = '1px solid var(--border)';
              const price = o.currentPrice ? Number(o.currentPrice).toFixed(2) : '—';
              const upnl = o.unrealizedPnl ? Number(o.unrealizedPnl).toFixed(2) : '0.00';
              div.innerHTML = `<div><b>$133o.symbol}</b> $134o.side.toUpperCase()} $135o.volume}<br/><span class="small">entry $136Number(o.entryPrice).toFixed(2)}  sl:$137o.sl||'—'} tp:$138o.tp||'—'}</span></div><div style="text-align:right"><div>$139price}</div><div style="color:$140o.unrealizedPnl>=0? '#58d68d':'#ff7b7b'}">$141upnl}</div><button data-id="$142o.id}" style="margin-top:6px">Close</button></div>`;
              positionsListEl.appendChild(div);
              div.querySelector('button').addEventListener('click', async ()=>143
                const id = div.querySelector('button').dataset.id;
                await refreshPositions();
              });
            });
          }
        }catch(e)144 console.warn(e); }
      }
      setInterval(refreshPositions, 3000);
