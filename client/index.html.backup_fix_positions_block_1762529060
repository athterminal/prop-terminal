        const row = document.querySelector(`.inst-row[data-sym="$51sym}"]`);
        if(row) row.querySelector(".price").textContent = price.toFixed(2);
      }

      /* ---------- time formatting & UTC button (unchanged) ---------- */
      const weekdays = ['Вс','Пн','Вт','Ср','Чт','Пт','Сб'];
      const months = ['Янв','Фев','Мар','Апр','Май','Июн','Июл','Авг','Сен','Окт','Ноя','Дек'];
      function formatCandleTime(tsSec, tf)52
        const d = new Date((tsSec + offsetMinutes*60)*1000);
        const dayName = weekdays[d.getUTCDay()];
        const day = String(d.getUTCDate()).padStart(2,'0');
        const month = months[d.getUTCMonth()];
        const year = d.getUTCFullYear();
        const hh = String(d.getUTCHours()).padStart(2,'0');
        const mm = String(d.getUTCMinutes()).padStart(2,'0');
        if(tf === '1M')53 const first = new Date(Date.UTC(d.getUTCFullYear(), d.getUTCMonth(), 1)); return `$54weekdays[first.getUTCDay()]} 01 $55months[first.getUTCMonth()]} $56first.getUTCFullYear()}`; }
        if(tf === '1w')57 const dd = new Date((tsSec + offsetMinutes*60)*1000); const dow = dd.getUTCDay(); const monday = new Date(dd); monday.setUTCDate(dd.getUTCDate() - ((dow + 6) % 7)); return `$58weekdays[monday.getUTCDay()]} $59String(monday.getUTCDate()).padStart(2,'0')} $60months[monday.getUTCMonth()]} $61monday.getUTCFullYear()}`; }
        if(tf === '1d') return `$62dayName} $63day} $64month} $65year}`;
        return `$66dayName} $67day} $68month} $69year} $70hh}:$71mm}`;
      }
      chart.applyOptions(72 localization: 73 timeFormatter: (t)=>formatCandleTime(t, currentInterval) }, timeScale:74 timeVisible:true, secondsVisible:false }});
      function updateTimeFormatter()75 chart.applyOptions(76 localization: 77 timeFormatter: (t)=>formatCandleTime(t, currentInterval) } }); }
      async function loadKlines(symbol=currentSymbol, interval=currentInterval)78
        try79 const url=`https://api.binance.com/api/v3/klines?symbol=$80symbol}&interval=$81interval}&limit=600`; const res=await fetch(url); const raw=await res.json(); const candles=raw.map(c=>(82time:c[0]/1000, open:+c[1], high:+c[2], low:+c[3], close:+c[4]})); candleSeries.setData(candles); return; }catch(e)83 console.warn(e);}
        const now = Math.floor(Date.now()/1000); const candles = Array.from(84length:600},(_,i)=>85const t=now-(600-i)*3600;const o=20000+Math.sin(i/10)*200;const c=o+Math.sin(i/5)*50;return 86time:t,open:o,high:o+100,low:o-100,close:c}}); candleSeries.setData(candles); return;
        try87
          const res = await fetch(`/api/history?symbol=$88symbol}&interval=$89interval}&limit=600`);
          const data = await res.json();
          if(data.s === 'ok') 90
            candleSeries.setData(data.candles);
          } else 91
            console.warn('kline error', data);
          }
        }catch(e)92 console.warn(e); }
      }
      loadKlines();

      /* ---------- live candle updater ---------- */
      let liveUpdater;
      async function startLiveFeed()93
        if(liveUpdater) clearInterval(liveUpdater);
        liveUpdater = setInterval(async ()=>94
          try 95
            const res = await fetch(`https://api.binance.com/api/v3/klines?symbol=$96currentSymbol}&interval=$97currentInterval}&limit=1`);
            const data = await res.json();
            if(Array.isArray(data) && data.length)98
              const c = data[0];
              const candle = 99
                time: Math.floor(c[0]/1000),
                open: parseFloat(c[1]),
                high: parseFloat(c[2]),
                low: parseFloat(c[3]),
                close: parseFloat(c[4])
              };
              candleSeries.update(candle);
        latestPrices[currentSymbol] = candle.close;
        updateSymbolPrice(currentSymbol, candle.close);
            }
          } catch(e) 100 console.warn("live update error", e); }
        }, 1000);
      }
      startLiveFeed();


