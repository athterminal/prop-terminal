      /* update prices in instrument list */
      function refreshPrices()114
        document.querySelectorAll(".inst-row").forEach(async row => 115
          const sym = row.dataset.sym;
          if(latestPrices[sym]) 116
            row.querySelector(".price").textContent = latestPrices[sym].toFixed(2);
            return;
          }
          try 117
            const res = await fetch(`/api/history?symbol=$118sym}&interval=1m&limit=1`);
            const d = await res.json();
            if(d.s === "ok" && d.candles?.length)119
              const last = d.candles.at(-1);
              row.querySelector(".price").textContent = last.close.toFixed(2);
              latestPrices[sym] = last.close;
            }
          }catch(e)120}
        });
      }
